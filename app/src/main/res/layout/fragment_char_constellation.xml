<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCharConstellation">

    <ScrollView
        android:id="@+id/scrollConstelaciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_style_generic"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/titleConstellations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/constellations"
                style="@style/titleTextType"/>

            <!-- CAJA CONSTELACIÓN 1 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/boxC1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleConstellations"
                android:layout_marginVertical="10dp"
                android:padding="10dp">
                <RelativeLayout
                    android:id="@+id/layoutImageC1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/backgroundIconC1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:shapeAppearanceOverlay="@style/circleImageView" />
                    <ImageView
                        android:id="@+id/iconC1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:tint="@color/grey_main_color"
                        android:layout_margin="10dp"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/nameC1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/subtitleTextType"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/layoutImageC1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/unlockC1"/>
                <TextView
                    android:id="@+id/unlockC1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/bodyTextType"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/nameC1"
                    app:layout_constraintStart_toEndOf="@id/layoutImageC1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/layoutImageC1"/>
                <TextView
                    android:id="@+id/descC1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/bodyTextType"
                    app:layout_constraintTop_toBottomOf="@id/layoutImageC1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- CAJA CONSTELACIÓN 2 -->
